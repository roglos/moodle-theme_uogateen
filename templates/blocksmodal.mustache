{{!
    @template theme_uogateen/staffmodal

    uogateen Staff blocks modal display.

    Context variables required for this template:
            * maintitle
            * subtitle
            * blocksmodalusersection
            * blockscontent

    Example context (json):
    {
            'maintitle'=>$maintitle,
            'subtitle'=>$subtitle,
            'blocksmodalusersection'=>$blocksmodalusersection,
            'blockscontent'=>$blockscontent
    }
}}

<div class="modal-dialog blocksmodal" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" style="float:right" class="btn btn-primary btn-large" data-dismiss="modal"
                aria-label="Close"><i class = "fa fa-times" aria-hidden="true"></i>
            </button>
            <h4 class="modal-title">{{{maintitle}}}</h4>
            <h5 class="modal-title">{{subtitle}}</h5>
        </div>
        <div class="modal-body">
            {{#blocksmodalusersection}}
                {{{ blocksmodalusersection }}}
            {{/blocksmodalusersection}}
            <p><br></p>
            {{#blockscontent}}
                {{{ blockscontent }}}
            {{/blockscontent}}
        </div>
    </div>
</div>
